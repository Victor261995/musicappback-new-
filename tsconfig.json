{
  "compilerOptions": {
    "target": "es6",                  
    "module": "CommonJS",           
    "outDir": "src/dist",               
    "rootDir": "./src",               
    "strict": true,                   
    "esModuleInterop": true,          
    "skipLibCheck": true,             
    "forceConsistentCasingInFileNames": true ,
    "moduleResolution": "node",
  },
  "include": ["src/app.ts"],        
  "exclude": ["node_modules","build"]       
}